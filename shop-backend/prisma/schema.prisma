generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Admin {
  id           Int    @id @default(autoincrement())
  username     String @unique
  passwordHash String @map("password_hash")

  @@map("admins")
}

model PaymentConfig {
  id            Int     @id @default(autoincrement())
  bankName      String  @map("bank_name")
  accountName   String  @map("account_name")
  accountNumber String  @map("account_number")
  qrImageUrl    String? @map("qr_image_url")
  qrImageKey    String? @map("qr_image_key")
  isActive      Boolean @default(true) @map("is_active")

  @@map("payment_configs")
}

model Product {
  id        Int              @id @default(autoincrement())
  name      String
  basePrice       Decimal          @map("base_price")
  productImageUrl String?          @map("product_image_url")
  productImageKey String?          @map("product_image_key")
  status          String           @default("SALE") // Enum: SALE, PREORDER, INACTIVE
  variants  ProductVariant[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("products")
}

model ProductVariant {
  id              Int     @id @default(autoincrement())
  productId       Int     @map("product_id")
  product         Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  price           Decimal
  stockQuantity   Int     @default(0) @map("stock_quantity")
  combinationJson String  @map("combination_json") // Storing JSON as string for SQLite compatibility

  @@map("product_variants")
}

model Order {
  id                 Int       @id @default(autoincrement())
  guestName          String    @map("guest_name")
  guestSurname       String    @map("guest_surname")
  guestEmail         String    @map("guest_email")
  // guestAddress removed
  totalAmount        Decimal   @map("total_amount")
  status             String    @default("WAITING_FOR_PAYMENT")
  slipImageUrl       String?   @map("slip_image_url")
  slipImageKey       String?   @map("slip_image_key")
  paidAt             DateTime? @map("paid_at")
  orderItemsSnapshot String    @map("order_items_snapshot") // JSON string of snapshot

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("orders")
}